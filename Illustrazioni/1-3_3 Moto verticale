	\draw [gray, dashed] [->] (0, 0) -- (0, 2)
		node [black, right] {$x(t)$};
	\filldraw [black] (0, 1) circle (1pt)
		node [black, left] {$m$}
		coordinate (m);
	\draw [black] [->] (m) -- ++(0, -0.5) node [left=-1pt, near end] {$\vec g$};
	\draw [black, thick] (-0.5, 0) -- (0.5, 0);
	\draw [decorate, decoration={brace, amplitude=6pt}] (m) -- (0, 0)
		node [midway, right=4pt] {$h$};
\end{tikzpicture}